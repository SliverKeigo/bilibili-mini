{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bilibili-mini",
  "version": "0.1.0",
  "identifier": "com.keigo.bilibili-mini",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:8421",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "BiliMini",
        "width": 320,
        "height": 480,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "visible": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
